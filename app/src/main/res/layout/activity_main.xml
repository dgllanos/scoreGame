<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/time_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_text_view" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"/>
    <TextView
            android:text="@string/score_game"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp" android:layout_marginStart="60dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            android:id="@+id/score_text_view"/>
    <Button
            android:text="@string/button_tap_me"
            android:layout_width="162dp"
            android:layout_height="53dp"
            android:id="@+id/tap_me_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.463"/>

</android.support.constraint.ConstraintLayout>